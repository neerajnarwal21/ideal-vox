<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="RadioTheme" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/colorPrimary2</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="RatingTheme" parent="Widget.AppCompat.RatingBar.Small">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/colorSecondaryDark</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
    </style>

    <style name="CheckTheme" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimary2</item>
    </style>

    <style name="MyTabWidget" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@fonts/playfair_display.ttf</item>
    </style>

    <style name="TextLabel" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/DarkGray</item>
        <item name="android:textColor">@color/DarkGray</item>
        <item name="android:textColorHighlight">@color/colorSecondaryDark</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="TextLabelProfile" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/DarkGray</item>
        <item name="android:textColor">@color/WhiteSmoke</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlNormal">@color/transparent</item>
        <item name="colorControlActivated">@color/transparent</item>
    </style>

</resources>
