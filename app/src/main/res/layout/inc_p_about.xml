<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/expTVV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Expert in:"
        android:textColor="@color/Black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/expTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:textAllCaps="true"
        android:textColor="@color/Black"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/expTVV"
        app:layout_constraintLeft_toRightOf="@+id/expTVV"
        tools:text="Expert in skjd" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/experTVV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="Experience:"
        android:textColor="@color/Black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expTV" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/experTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/Black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/experTVV"
        app:layout_constraintTop_toBottomOf="@+id/expTV"
        tools:text="2 Years, 9 monts" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/ageTVV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="Age:"
        android:textColor="@color/Black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/experTV" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/ageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/Black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/ageTVV"
        app:layout_constraintTop_toBottomOf="@+id/experTV"
        tools:text="25 years" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/emailTVV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="Email:"
        android:textColor="@color/Black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ageTV" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/emailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/Black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/emailTVV"
        app:layout_constraintTop_toBottomOf="@+id/ageTV"
        tools:text="2 sjf@jsd.ssu" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/addressTVV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="Address:"
        android:textColor="@color/Black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailTV" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/addressTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@color/Black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/addressTVV"
        app:layout_constraintTop_toBottomOf="@+id/emailTV"
        tools:text="dgdhsvherb
rebfdvdfbdfbdfb" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/aboutTVV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="About:"
        android:textColor="@color/Black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressTV" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/aboutTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:textColor="@color/Black"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aboutTVV" />

</android.support.constraint.ConstraintLayout>