<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/dayTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:theme="@style/TextLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.ideal.vox.customViews.MyEditText
                android:id="@+id/dayET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DAY BOOKING PRICE"
                android:inputType="number"
                android:textColor="@color/WhiteSmoke" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nightTIL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:theme="@style/TextLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dayTIL">

            <com.ideal.vox.customViews.MyEditText
                android:id="@+id/nightET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NIGHT BOOKING PRICE"
                android:inputType="number"
                android:textColor="@color/WhiteSmoke" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fullTIL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:theme="@style/TextLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nightTIL">

            <com.ideal.vox.customViews.MyEditText
                android:id="@+id/fullET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="FULL DAY BOOKING PRICE"
                android:inputType="number"
                android:textColor="@color/WhiteSmoke" />
        </android.support.design.widget.TextInputLayout>

        <com.ideal.vox.customViews.MyButton
            android:id="@+id/saveBT"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/btn_yellow"
            android:text="SAVE DETAILS"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullTIL" />

        <com.ideal.vox.customViews.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_info_white"
            android:drawablePadding="10dp"
            android:text="All bookings are done on basis of these prices. Admin charges is also included in these prices."
            android:textColor="@color/WhiteSmoke"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/saveBT" />

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>