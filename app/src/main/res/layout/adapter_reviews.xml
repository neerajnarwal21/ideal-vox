<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary2"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/parentCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/picIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/yellow_circle"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ideal.vox.customViews.MyTextView
            android:id="@+id/nameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:gravity="start"
            android:lines="1"
            android:textColor="@color/WhiteSmoke"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/picIV"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="NAME" />

        <ImageView
            android:id="@+id/editReviewIV"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/yellow_circle"
            android:padding="4dp"
            android:src="@drawable/ic_edit_black"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameTV" />

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/ratingRB"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:numStars="5"
            android:theme="@style/RatingTheme"
            app:layout_constraintLeft_toRightOf="@+id/picIV"
            app:layout_constraintTop_toBottomOf="@id/nameTV" />

        <com.ideal.vox.customViews.MyTextView
            android:id="@+id/reviewTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:textColor="@color/WhiteSmoke"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/picIV"
            app:layout_constraintTop_toBottomOf="@id/ratingRB" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>