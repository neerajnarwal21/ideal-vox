<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/expTVV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/WhiteSmoke"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Expert in"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/expTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/WhiteSmoke"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@id/callIV"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/experTVV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/WhiteSmoke"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Experience"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expTV" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/experTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/WhiteSmoke"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@id/callIV"
        app:layout_constraintTop_toBottomOf="@id/expTV" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/ageTVV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/WhiteSmoke"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Age"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/experTV" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/ageTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/WhiteSmoke"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@id/callIV"
        app:layout_constraintTop_toBottomOf="@id/experTV" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/mobileTVV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/WhiteSmoke"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Mobile"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ageTV" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/mobileTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/WhiteSmoke"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@id/callIV"
        app:layout_constraintTop_toBottomOf="@id/ageTV" />
    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/emailTVV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/WhiteSmoke"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Address"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobileTV" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/emailTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/WhiteSmoke"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@id/callIV"
        app:layout_constraintTop_toBottomOf="@id/mobileTV" />
    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/addressTVV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/WhiteSmoke"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Email"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailTV" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/addressTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/WhiteSmoke"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@id/callIV"
        app:layout_constraintTop_toBottomOf="@id/emailTV" />


    <ImageView
        android:id="@+id/callIV"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/yellow_circle"
        android:padding="5dp"
        android:src="@drawable/ic_call_black"
        app:layout_constraintBottom_toTopOf="@+id/mapIV"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/mapIV"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/yellow_circle"
        android:padding="5dp"
        android:src="@drawable/ic_place_black"
        app:layout_constraintBottom_toTopOf="@+id/editAccessoryIV"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/accTV"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:padding="5dp"
        android:text="Accessories"
        android:textColor="@color/colorSecondary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressTV" />

    <ImageView
        android:id="@+id/editAccessoryIV"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/yellow_circle"
        android:padding="4dp"
        android:src="@drawable/ic_edit_black"
        app:layout_constraintStart_toEndOf="@+id/accTV"
        app:layout_constraintTop_toBottomOf="@+id/addressTV" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/accListRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:overScrollMode="never"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accTV" />

    <com.ideal.vox.customViews.MyTextView
        android:id="@+id/emptyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="No Accessories added yet\nAdd accessories using edit section"
        android:textColor="@color/WhiteSmoke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accTV"/>

    <ProgressBar
        android:id="@+id/loadingPB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:theme="@style/RadioTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accTV" />
</android.support.constraint.ConstraintLayout>